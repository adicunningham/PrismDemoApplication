<Window x:Class="PrismDemoApplication.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism" 
        xmlns:inf="clr-namespace:PrismDemoApplication.Infrastructure;assembly=PrismDemoApplication.Infrastructure" 
        Title="Shell">
    <Grid>
        <DockPanel LastChildFill="true">
            <ItemsControl DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionNames.ToolbarRegion}"/>
            <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ContentRegion}"/>
        </DockPanel>
    </Grid>
</Window>
